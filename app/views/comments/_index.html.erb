<%= render 'layouts/flash' %>
<ul>
  <% comments.each do |comment| %>
  <div>
    <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
    <% if comment.id.present? && comment.user_id == current_user.id %>
    <p>コメント：<%= comment.content %></p>
    <p>投稿者：<%= comment.article.user.name %></p>
    <div id="errors_area_<%= comment.id %>">
    <%= render partial: 'comments/edit_error' %>
    </div>
    <p><%= link_to "編集", edit_article_comment_path(article, comment), remote: true %></p>
    <p><%= link_to "削除", article_comment_path(comment.article_id, comment.id), method: :delete, remote: true,
      data: { confirm: "本当に削除しますか?"} %></p>
  </div>
    <% end %>
   <% end %>
  </ul>
